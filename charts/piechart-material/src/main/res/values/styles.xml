<resources>

    <!-- Base styles for labels UI -->

    <style name="Base.AndroidCharts.Material.PieChart.Labels.Outside" parent="">
        <item name="simplePieChartLabelsUI_labelPosition">outside</item>
        <item name="simplePieChartLabelsUI_labelSpacing">@dimen/charts_piechart_spacing_labels_outside</item>
        <item name="simplePieChartLabelsUI_textAppearance">@style/AndroidCharts.Material.TextAppearance.Label.Outside</item>
    </style>

    <style name="Base.AndroidCharts.Material.PieChart.Labels.Inside" parent="">
        <item name="simplePieChartLabelsUI_labelPosition">inside</item>
        <item name="simplePieChartLabelsUI_labelSpacing">@dimen/charts_piechart_spacing_labels_inside</item>
        <item name="simplePieChartLabelsUI_labelMinPercent">@integer/charts_piechart_min_percent_label</item>
    </style>

    <!-- Base styles for pie chart UI -->

    <style name="Base.AndroidCharts.Material.PieChart.SimpleUI" parent="">
        <item name="simplePieChartUI_colors">@color/charts_series_color</item>
        <item name="simplePieChartUI_shadowColor">@color/charts_piechart_color_shadow</item>
        <item name="simplePieChartUI_sliceSpacing">@dimen/charts_piechart_simple_spacing</item>
        <item name="simplePieChartUI_selectionShift">@dimen/charts_piechart_simple_selection_shift</item>
        <item name="simplePieChartUI_selectionElevation">@dimen/charts_piechart_simple_selection_elevation</item>
    </style>

    <style name="Base.AndroidCharts.Material.PieChart.DonutUI" parent="">
        <item name="donutPieChartUI_colors">@color/charts_series_color</item>
        <item name="donutPieChartUI_shadowColor">@color/charts_piechart_color_shadow</item>
        <item name="donutPieChartUI_donutWidth">@dimen/charts_piechart_donut_width</item>
        <item name="donutPieChartUI_donutSpacing">@dimen/charts_piechart_donut_spacing</item>
        <item name="donutPieChartUI_selectionWidth">@dimen/charts_piechart_donut_selection_width</item>
        <item name="donutPieChartUI_selectionShift">@dimen/charts_piechart_donut_selection_shift</item>
        <item name="donutPieChartUI_selectionElevation">@dimen/charts_piechart_donut_selection_elevation</item>
    </style>

    <!-- Base styles for pie charts -->

    <style name="Base.AndroidCharts.Material.PieChart" parent="">
        <item name="android:gravity">center</item>
        <item name="pieChart_rotationAngle">@integer/charts_piechart_rotation_top</item>
        <item name="pieChart_dataSetInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pieChart_dataSetAnimationDuration">@integer/charts_anim_duration</item>
        <item name="pieChart_selectionInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pieChart_selectionAnimationDuration">@integer/charts_anim_duration</item>
        <item name="pieChart_labelsUI">@string/simple_pie_chart_labels_ui</item>
    </style>

    <style name="Base.AndroidCharts.Material.PieChart.Simple">
        <item name="pieChart_ui">@string/simple_pie_chart_ui</item>
    </style>

    <style name="Base.AndroidCharts.Material.PieChart.Simple.LabelsOutside">
        <item name="pieChart_labelsPaddingFromText">@string/pie_chart_label_padding_reference</item>
    </style>

    <style name="Base.AndroidCharts.Material.PieChart.Donut">
        <item name="pieChart_ui">@string/donut_pie_chart_ui</item>
    </style>

    <style name="Base.AndroidCharts.Material.PieChart.Donut.LabelsOutside">
        <item name="pieChart_labelsPaddingFromText">@string/pie_chart_label_padding_reference</item>
    </style>

    <!-- Styles for labels UI -->

    <style name="AndroidCharts.Material.PieChart.Labels.Outside" parent="Base.AndroidCharts.Material.PieChart.Labels.Outside" />

    <style name="AndroidCharts.Material.PieChart.Labels.Inside" parent="Base.AndroidCharts.Material.PieChart.Labels.Inside">
        <item name="simplePieChartLabelsUI_textAppearance">@style/AndroidCharts.Material.TextAppearance.Label.Outside</item>
    </style>

    <style name="AndroidCharts.Material.PieChart.Labels.InsideSlice" parent="Base.AndroidCharts.Material.PieChart.Labels.Inside">
        <item name="simplePieChartLabelsUI_textAppearance">@style/AndroidCharts.Material.TextAppearance.Label.Inside</item>
    </style>

    <!-- Styles for pie chart UI -->

    <style name="AndroidCharts.Material.PieChart.SimpleUI" parent="Base.AndroidCharts.Material.PieChart.SimpleUI" />
    <style name="AndroidCharts.Material.PieChart.DonutUI" parent="Base.AndroidCharts.Material.PieChart.DonutUI" />

    <!-- Styles for pie charts -->

    <style name="AndroidCharts.Material.PieChart.Simple.LabelsInside" parent="Base.AndroidCharts.Material.PieChart.Simple">
        <item name="pieChart_uiAppearance">@style/AndroidCharts.Material.PieChart.SimpleUI</item>
        <item name="pieChart_labelsAppearance">@style/AndroidCharts.Material.PieChart.Labels.InsideSlice</item>
    </style>

    <style name="AndroidCharts.Material.PieChart.Simple.LabelsOutside" parent="Base.AndroidCharts.Material.PieChart.Simple.LabelsOutside">
        <item name="pieChart_uiAppearance">@style/AndroidCharts.Material.PieChart.SimpleUI</item>
        <item name="pieChart_labelsAppearance">@style/AndroidCharts.Material.PieChart.Labels.Outside</item>
    </style>

    <style name="AndroidCharts.Material.PieChart.Donut.LabelsInside" parent="Base.AndroidCharts.Material.PieChart.Donut">
        <item name="pieChart_uiAppearance">@style/AndroidCharts.Material.PieChart.DonutUI</item>
        <item name="pieChart_labelsAppearance">@style/AndroidCharts.Material.PieChart.Labels.Inside</item>
    </style>

    <style name="AndroidCharts.Material.PieChart.Donut.LabelsOutside" parent="Base.AndroidCharts.Material.PieChart.Donut.LabelsOutside">
        <item name="pieChart_uiAppearance">@style/AndroidCharts.Material.PieChart.DonutUI</item>
        <item name="pieChart_labelsAppearance">@style/AndroidCharts.Material.PieChart.Labels.Outside</item>
    </style>

</resources>
